{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "esnext",
      "target": "esnext",
      "lib": [
          "esnext",
          "dom"
      ],
      "strict": true,
      "declaration": true,
      "sourceMap": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "declarationDir": "dist/types",
      "outDir": "dist/lib",
      "typeRoots": ["node_modules/@types", "types"]
    },
    "include": [
      "src"
    ]
  }